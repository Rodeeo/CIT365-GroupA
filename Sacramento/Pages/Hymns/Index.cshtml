@page
@model Sacramento.Pages.Hymns.IndexModel

@{
    ViewData["Title"] = "Hymns";
}

<h1>Hymns</h1>

<p>
    <a class="btn btn-highlight" asp-page="Create">Create New +</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hymn[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hymn[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Hymn) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
