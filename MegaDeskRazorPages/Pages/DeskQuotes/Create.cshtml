@page
@model MegaDeskRazorPages.Pages.DeskQuotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" value="Daniel Melo" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DateEntry" class="control-label"></label>
                <input asp-for="DeskQuote.DateEntry" class="form-control" value="2021-01-01" />
                <span asp-validation-for="DeskQuote.DateEntry" class="text-danger"></span>
            </div>

            @* Desk Attributes *@
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Width" class="form-control" value="60" />
                <span asp-validation-for="DeskQuote.Desk.Width" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Depth" class="form-control" value="30" />
                <span asp-validation-for="DeskQuote.Desk.Depth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Material" class="control-label"></label>
                @* <input asp-for="DeskQuote.Desk.Depth" class="form-control" value="30" /> *@

                <select class="form-control selectpicker" asp-for="DeskQuote.Desk.Material" asp-items="Model.Materials">
                    <option value="">Choose the Material</option>
                </select>
                <span asp-validation-for="DeskQuote.Desk.Material" class="text-danger"></span>
            </div>

            @* Desk Attributes *@


            <div class="form-group">
                <label asp-for="DeskQuote.Rush" class="control-label"></label>
                @* <input asp-for="DeskQuote.Desk.Depth" class="form-control" value="30" /> *@

                <select class="form-control selectpicker" asp-for="DeskQuote.Rush" asp-items="Model.Rushes">
                    <option value="">Choose the Rush Option</option>
                </select>
                <span asp-validation-for="DeskQuote.Rush" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="DeskQuote.TotalCost" class="control-label"></label>
                <input asp-for="DeskQuote.TotalCost" class="form-control" value="1000" />
                <span asp-validation-for="DeskQuote.TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
