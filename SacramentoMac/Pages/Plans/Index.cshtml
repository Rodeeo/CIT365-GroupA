@page
@model Sacramento.Pages.Plans.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].MeetingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].PresidingLeader)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].ConductingLeader)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].OpeningSong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].OpeningPrayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].SacramentHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].IntermediateSong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].ClosingSong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].ClosingPrayer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Plan)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PresidingLeader.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConductingLeader.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpeningSong.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpeningPrayer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SacramentHymn.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IntermediateSong.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClosingSong.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClosingPrayer)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
