@page
@model MegaDeskRazor.Pages.DesktopMaterials.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div style="display: flex;">
    <h1>Desktop Surface Materials</h1>
    <a class="btn btn-primary reg-btn add-btn" href="/DesktopMaterials/Create" title="Add New Material"> <h3>&#43;</h3></a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DesktopMaterial[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesktopMaterial[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesktopMaterial[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DesktopMaterial)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @* @Html.DisplayFor(modelItem => item.Image.Path) *@
                    <img src="~/img/@Html.DisplayFor(modelItem => item.Image.Path)" alt="Girl in a jacket" width="80"
                    height="100">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
